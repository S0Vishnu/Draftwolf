{
  "name": "draftflow",
  "version": "1.1.0",
  "description": "A modern client application built with React, TypeScript, and Vite, with optional Electron support.",
  "main": "./out/main/index.js",
  "author": "example.com",
  "homepage": "https://www.electronjs.org",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "format": "prettier --write .",
    "electron:dev": "electron-vite dev",
    "electron:build": "electron-vite build",
    "electron:build:win": "npm run electron:build && electron-builder --win",
    "electron:build:mac": "npm run electron:build && electron-builder --mac",
    "electron:build:linux": "npm run electron:build && electron-builder --linux",
    "electron:preview": "electron-vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "typecheck": "tsc --noEmit"
  },
  "build": {
    "appId": "com.example.draftflow",
    "productName": "DraftFlow",
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "resources/logo.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "DraftFlow"
    },
    "protocols": [
      {
        "name": "DraftFlow Auth",
        "schemes": [
          "myapp"
        ]
      }
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "S0Vishnu",
        "repo": "Draftflow-app"
      }
    ]
  },
  "dependencies": {
    "@dicebear/core": "^9.2.4",
    "adm-zip": "^0.5.16",
    "chokidar": "^3.6.0",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.7.3",
    "keytar": "^7.9.0"
  },
  "devDependencies": {
    "@dicebear/collection": "^9.2.4",
    "@electron-toolkit/preload": "^3.0.0",
    "@electron-toolkit/utils": "^3.0.0",
    "@fontsource/inter": "^5.2.8",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-slot": "^1.0.2",
    "@react-three/drei": "^9.99.0",
    "@react-three/fiber": "^8.15.16",
    "@types/node": "^18.19.17",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@types/three": "^0.161.2",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.17",
    "clsx": "^2.1.0",
    "date-fns": "^3.3.1",
    "electron": "^28.2.3",
    "electron-builder": "^24.9.1",
    "electron-vite": "^2.0.0",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "firebase": "^12.7.0",
    "lucide-react": "^0.330.0",
    "postcss": "^8.4.35",
    "prettier": "^3.2.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-firebase-hooks": "^5.1.1",
    "react-router-dom": "^6.22.0",
    "react-toastify": "^10.0.4",
    "socket.io-client": "^4.7.4",
    "tailwind-merge": "^2.2.1",
    "tailwindcss": "^3.4.1",
    "three": "^0.161.0",
    "typescript": "^5.3.3",
    "vite": "^5.1.3",
    "zustand": "^4.5.0"
  }
}
